@model Final_Football_Club.Models.Player

@{

    if (Session["PlayerUsername"] == null)
    {
        Response.Redirect("../Home/Login");
    }
    ViewBag.Title = "PlayerProfile";
}
<style>
    body {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    .dropbtn {
        background-color: black;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        color: white;
        position: absolute;
        background-color: black;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd;
            }

    .dropdown:hover .dropdown-content {
        display: block;
        color: white;
    }

    .dropdown:hover .dropbtn {
        background-color: black;
    }

    body {
        font-family: Segoe UI, sans-serif;
        font-size: 20px;
        color: black;
    }

    h2 {
        text-align: center;
    }

    .main-container {
        max-width: 800px;
        margin: auto;
        margin-top: 50px;
        padding: 0 0 50px 50px;
        border: 5px solid black;
        border-radius: 5px;
        /* CSS GRID LAYOUT */
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: auto;
        grid-gap: 5px;
        background-color: silver;
        border-color: mediumvioletred;
    }

    header {
        /* CSS GRID LAYOUT */
        grid-column: 1/ 3;
    }


    .profile-photo {
        /* CSS GRID LAYOUT */
        grid-column: 1 / 2;
    }

        .profile-photo > img {
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 5px;
        }

    .profile-info-1 {
        /* CSS GRID LAYOUT */
        grid-column: 2 / 3;
    }

    .profile-info-2 {
        margin-top: 30px;
        margin-left: 50px;
        /* CSS GRID LAYOUT */
        grid-column: 1 / 3;
    }

    td {
        padding: 5px;
    }

    .label {
        font-weight: 500;
        font-size: 20px;
        color: black;
        font-weight: bold;
    }

    .button-container {
        display: flex;
        /* CSS GRID LAYOUT */
        grid-column: 1 / 3;
    }


    .label {
        color: black;
    }

    .button-container {
        display: flex;
        /* CSS GRID LAYOUT */
        grid-column: 1 / 3;
    }

    .button {
        margin-top: 30px;
        margin-left: 50px;
        outline: none;
        border: none;
        border-radius: 5px;
        padding: 5px 20px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 700;
    }

    .button-accent {
        color: white;
        background-color: azure;
        transition: background-color 0.5s ease;
    }

        .button-accent:hover {
            background-color: burlywood;
        }
</style>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            @Html.ActionLink("FootBall Club", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Achievement", "ClubHistory", "Player", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Chat", "Create", "Notification", new { area = "" }, new { @class = "navbar-brand" })


            <div class="dropdown">
                <button class="dropbtn">MemberList</button>
                <div class="dropdown-content">

                    <a>
                        @Html.ActionLink("PlayerList", "PlayerList", "Player", new { area = "" }, new { @class = "navbar-brand" })
                    </a>
                    <a>
                        @Html.ActionLink("CoachList", "CoachList", "Coach", new { area = "" }, new { @class = "navbar-brand" })
                    </a>

                </div>
            </div>
            @Html.ActionLink("LogOut", "Logout", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <a href="/Notification" class="navbar-brand">Notification (@Session["Notifications"])</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            </ul>
        </div>
    </div>
</div>
<html>
<head>
    <title>Profile</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="main-container">


        <header>
            <h2>Player's Profile</h2>
        </header>

        <div class="profile-photo">
            @if (String.IsNullOrEmpty(Model.Image))
            {
                <img src="/Content/Images/OIP.jpg" />
            }
            else
            {
                <img src="/Content/Images/@Model.Image" />
            }
        </div>
        <div class="profile-info-1">
            <table>
                <tr>
                    <td></td>

                    @*  <td style="text-align:right;">
                            @if (String.IsNullOrEmpty(Model.Image))
                            {
                                <img src="/Content/Images/OIP.jpg" width="200px" />
                            }
                            else
                            {
                                <img src="/Content/Images/@Model.Image" width="200px" />
                            }
                        </td> *@

                </tr>

                <tr>
                    <td class="label">
                        Name:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Email :
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Password:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Phone:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Phone)
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Age:
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Age)
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Salary
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Salary)
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Address :
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Address)
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Position :
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Position)
                    </td>
                </tr>
            </table>
        </div>


        <div class="profile-info-2">
            <table>
                <tr>
                    <td class="label">
                        Username :
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserName)
                    </td>
                </tr>



            </table>
        </div>


        <div class="button-container">
            <button class="button button-accent">@Html.ActionLink("Edit Profile", "../Player/PlayerListEdit", new { id = Model.UserName })</button>
        </div>


    </div>
</body>
</html>