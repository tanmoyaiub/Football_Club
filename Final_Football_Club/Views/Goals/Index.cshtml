        @Html.DisplayFor(modelItem => item.NumberOfGoals)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Card)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Match.OppositeTeam)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Player.Name)
    </td>

