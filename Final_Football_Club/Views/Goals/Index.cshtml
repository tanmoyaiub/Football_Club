@model IEnumerable<Final_Football_Club.Models.Goal>

@{
    ViewBag.Title = "Index";
    if (Session["UserName"] == null)
    {
        Response.Redirect("../Home/Login");
    }
}

<h2>Index</h2> 

<p>
    @Html.ActionLink("Create New", "Create")

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Match.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfGoals)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Card)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Match.OppositeTeam)
        </th>
