@model IEnumerable<Final_Football_Club.Models.Coach>
@{
    if (Session["AdminUserName"] == null)
    {
        Response.Redirect("../Home/Login");
    }
    ViewBag.Title = "CoachList";
    double invesment = 0;
}

<style>
    .dropbtn {
        background-color: black;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        color: white;
        position: absolute;
        background-color: black;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd;
            }

    .dropdown:hover .dropdown-content {
        display: block;
        color: white;
    }

    .dropdown:hover .dropbtn {
        background-color: black;
    }
</style>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            @Html.ActionLink("FootBall Club", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Register new user", "SignUp", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("SendEmail", "SendEmail", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Achievement", "", "Admin", new { area = "" }, new { @class = "navbar-brand" })

            <div class="dropdown">
                <button class="dropbtn">MemberList</button>
                <div class="dropdown-content">
                    <a>
                        @Html.ActionLink("UserList", "UserList", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                    </a>
                    <a>
                        @Html.ActionLink("PlayerList", "PlayerList", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </a>
                    <a>
                        @Html.ActionLink("CoachList", "CoachList", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </a>

                </div>
            </div>
            @Html.ActionLink("LogOut", "Logout", "Home", new { area = "" }, new { @class = "navbar-brand" })

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            </ul>
        </div>
    </div>
</div>
<h2>CoachList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        invesment += item.Salary;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
            </td>
            <td>
                @Html.ActionLink("Edit", "../Coach/CoachListEdit", new { id = item.UserName }) |

            </td>
        </tr>
    }

</table>
<div colspane="4" style="text-align:right">
    <h2>Invesment on Coach : @invesment.ToString() BDT</h2>
</div>
<div>
    @Html.ActionLink("Back to Profile", "../Admin/AdminDashboard")
</div>
